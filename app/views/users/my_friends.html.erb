<h1>Friends</h1>
  
<div class="search-area">
    <h3>Search friends</h3>
</div>
<%= form_tag search_friend_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:stock], placeholder: "Name or email ", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="freinds my-3">
      <%= render 'users/friend'%>
    </div>

<%if @friends%>
<%= render "friendships/friends"%>
<% end%>